<div class="page-header">
  <h1><%= @book.title %></h1>
</div>

<p>Author: <%= @book.author %></p>
<%= image_tag @book.photo_url %>
<p>Price: <%= number_to_currency @book.price %></p>

<%= link_to "Update Book", edit_book_path(id: @book.id), class: 'btn btn-default' %>
<%= link_to "Delete Book", book_path(id: @book.id), method: :delete, class: "btn btn-danger" %>
